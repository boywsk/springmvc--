<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@ taglib uri="/tags" prefix="date"%>
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>APP信息</title>
    <script type="text/javascript" src="../js/jquery-1.2.6.pack.js"></script>
    <link href="../css/ligerui-all.css" rel="stylesheet" type="text/css" />
    <script src="../js/ligerUI/base.js" type="text/javascript"></script>
    <script src="../js/ligerUI/ligerGrid.js" type="text/javascript"></script>
    <script src="../js/ligerUI/ligerDrag.js" type="text/javascript"></script>
    <script src="../js/ligerUI/ligerResizable.js" type="text/javascript"></script>	    
    <script type="text/javascript">
	    $(function() {
	        var appId = $("#appId").val();         
	        var url = "displayAppSysAccount.do?appId="+appId;
	        $("#maingrid").ligerGrid({
	            columns : [
					{
					    display : 'appId',
					    name : 'appId',
					    width : '15%',
					    align : 'left'
					},{
	                    display : 'uName',
	                    name : 'uName',
	                    width : '15%',
	                    align : 'left'
	                },{
	                    display : 'uId',
	                    name : 'uId',
	                    width : '15%',
	                    align : 'left'
	                },{
	                    display : '创建时间',
	                    name : 'createTime',
	                    width : '15%',
	                    type : 'date',
	                    format: 'yyyy-mm-dd HH:mm:ss',
	                    align : 'left'
	                },{
	                    display : '描述',
	                    name : 'uDesc',
	                    width : '40%',
	                    align : 'left'
	                }],
	            allowHideColumn : false,
	            checkbox : false,
	            usePager : true,
	            rownumbers : false,
	            alternatingRow : false,
	            dateFormat: "yyyy-MM-dd hh:mm:ss",
	            tree : {
	                columnName : 'name'
	            },
	            url : url,
	            method : "post",
	        });
	    });   
	    $(document).ready(function() {
	    });
    </script>
	<script type="text/javascript">
        function displayAppSysAccount(){
            var url;
            var appId = $("#appId").val(); 
            var uId = $("#uId").val();
            var uName = $("#uName").val();
            url = "displayAppSysAccount.do?appId="+appId+"&uId="+uId+"&uName="+uName;
            $("#maingrid").ligerGrid({
	            columns : [
					{
					    display : 'appId',
					    name : 'appId',
					    width : '15%',
					    align : 'left'
					},{
	                    display : 'uName',
	                    name : 'uName',
	                    width : '15%',
	                    align : 'left'
	                },{
	                    display : 'uId',
	                    name : 'uId',
	                    width : '15%',
	                    align : 'left'
	                },{
	                    display : '创建时间',
	                    name : 'createTime',
	                    width : '15%',
	                    type : 'date',
	                    format: 'yyyy-mm-dd HH:mm:ss',
	                    align : 'left'
	                },{
	                    display : '描述',
	                    name : 'uDesc',
	                    width : '40%',
	                    align : 'left'
	                }],
                allowHideColumn : false,
                checkbox : false,
                usePager : true,
                rownumbers : false,
                alternatingRow : false,
                dateFormat: "yyyy-MM-dd hh:mm:ss",
                tree : {
                    columnName : 'name'
                },
                url : url,
                method : "post",
            });
        }
    </script>
</head>
<body>
<br>
<h3>APP系统帐号列表</h3>
<br>
<div>
	&nbsp;&nbsp;&nbsp;&nbsp;
	<c:if test="${type=='2'}">
		APPID列表：
		<select name = "appId" id = "appId" style="width: 179px;">
			<c:forEach items="${appIdList}" var="data">
	             <option value="${data.appId}">${data.appId}</option>
	     	</c:forEach>
		</select>
	</c:if>
	<c:if test="${type=='1'}">
		APPID：<input type="text" name="appId" id="appId" value = "${param.appId}" size="18"/>
	</c:if>
	
	&nbsp;&nbsp;&nbsp;&nbsp;
    uId：<input type="text" name="uId" id="uId" value = "${param.uId}" size="18"/>
    &nbsp;&nbsp;&nbsp;&nbsp;
    uName：<input type="text" name="uName" id="uName" value = "${param.uName}" size="18"/>    
	&nbsp;&nbsp;&nbsp;&nbsp;
    <input type="button" onclick="displayAppSysAccount()" value="查询" />
    <c:if test="${type=='2'}">
    	<input type="button" onclick='location.href="appSysAccount.do"' value="添加APP系统账号" />
    </c:if>	    
</div><hr>
<div id="maingrid" style="margin: 0; padding: 0"></div>
</body>
</html>